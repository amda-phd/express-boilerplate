{
  "name": "express-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for a simple Express REST API with MongoDB integration via Mongoose",
  "main": "index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "env-cmd -f ./config/dev.env nodemon src/index.js",
    "local": "env-cmd -f ./config/local.env nodemon src/index.js",
    "test": "env-cmd -f ./config/test.env jest --watch --runInBand --detectOpenHandles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amda-phd/express-boilerplate.git"
  },
  "keywords": [
    "express",
    "node",
    "node.js",
    "javascript",
    "api",
    "rest",
    "mongodb",
    "mongoose"
  ],
  "author": "amda",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amda-phd/express-boilerplate/issues"
  },
  "homepage": "https://github.com/amda-phd/express-boilerplate#readme",
  "devDependencies": {
    "env-cmd": "^10.1.0",
    "jest": "^26.6.3",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3"
  },
  "dependencies": {
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-joi-validation": "^5.0.0",
    "joi": "^17.4.1",
    "mongoose": "^5.13.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.2"
  },
  "_moduleAliases": {
    "Models": "src/models",
    "Routers": "src/routers",
    "Validators": "src/validators",
    "@app": "src/app.js",
    "@DB": "src/db/mongo.js"
  },
  "jest": {
    "moduleNameMapper": {
      "Models/(.*)": "<rootDir>/src/models/$1",
      "Routers/(.*)": "<rootDir>/src/routers/$1",
      "Validators/(.*)": "<rootDir>/src/validators/$1",
      "@app": "<rootDir>/src/app.js",
      "@db": "<rootDir>/src/db/mongo.js",
      "src/(.*)": "<rootDir>/src/$1"
    }
  }
}
